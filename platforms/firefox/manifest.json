{

    "manifest_version": 2,
    "name": "BB Kurse FU",
    "version": "1.0.0",
    "author": "adno",
  
    "description": "Sortiert FU Blackboard Kurse automatisch nach den Semstern. FÃ¼r lms.fu-berlin.de ",
    "homepage_url": "https://github.com/ITadno/BB-Kurse-FU",

    "icons": {
      "32": "icons/addon-icon.png"
    },

    "content_scripts": [
      {
        "matches": ["*://lms.fu-berlin.de/webapps/portal/execute/tabs/tabAction?tab_tab_group_id=_2_1*"],
        "js": ["sort/sortCourses.js"]
      },
      {
        "matches": ["*://lms.fu-berlin.de/webapps/blackboard/content/listContent.jsp*"],
        "js": ["download/downloadFiles.js"]
      }
    ],

    "background": {
      "scripts": ["background/download.js"]
    },

    "options_ui": {
      "page": "popups/options.html",
      "browser_style": true
    },

    "permissions": [
      "storage",
      "downloads"
    ],

    "browser_specific_settings": {
      "gecko": {
        "id": "bb-kurse-fu-berlin@adno"
      }
    },

    "web_accessible_resources": [
      "*.css", "*.svg"
    ],

    "page_action":{
      "browser_style": true,
      "show_matches": [
        "*://lms.fu-berlin.de/webapps/portal/execute/tabs/tabAction?tab_tab_group_id=_2_1*",
        "*://lms.fu-berlin.de/webapps/blackboard/content/listContent.jsp*"
      ],
      "default_icon": "icons/addon-icon.png",
      "default_title": "BB Kurse FU",
      "default_popup": "popups/options.html"
    }
  }